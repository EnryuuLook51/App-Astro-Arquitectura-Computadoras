---
import BlurHeader from "../components/BlurHeader";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Repositorio de videos educativos - Arquitectura de Computadoras UNS"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <!-- Header flotante estilo Midudev -->
    <BlurHeader title={title} client:load />

    <!-- Contenido principal -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Footer original exactamente como estaba -->
    <footer
      class="bg-white/80 backdrop-blur-md border-t border-red-500/30 mt-16 shadow-lg shadow-gray-200/50"
    >
      <div class="container mx-auto px-4 py-6 md:py-8 max-w-7xl">
        <div class="text-center space-y-3">
          <div class="flex items-center justify-center gap-2 text-gray-700">
            <div class="w-2 h-2 bg-red-400 rounded-full animate-pulse"></div>
            <p class="font-medium text-sm md:text-base">Ciclo IV - 2025</p>
          </div>
          <p class="text-gray-600 text-xs md:text-sm">
            Ingeniería de Sistemas e Informática - UNS | Dr. Guerra Cordero
            Carlos
          </p>
          <div class="pt-3 md:pt-4 border-t border-gray-300"></div>
        </div>
      </div>
    </footer>
  </body>
</html>
