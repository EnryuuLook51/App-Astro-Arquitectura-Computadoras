---
import LogoUNS from "../components/LogoUNS";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Repositorio de videos educativos - Arquitectura de Computadoras UNS"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <!-- Header -->
    <header
      class="bg-white/80 backdrop-blur-md border-b border-red-500/30 sticky top-0 z-50 shadow-lg shadow-gray-200/50"
    >
      <div class="container mx-auto px-4 py-3 md:py-4 max-w-7xl">
        <div class="flex items-center justify-between min-h-[60px]">
          <a
            href="/"
            class="flex items-center gap-3 hover:opacity-80 transition-all duration-300 hover:scale-105 group"
          >
            <LogoUNS client:load />
            <div class="hidden sm:block">
              <h1
                class="text-lg md:text-xl font-bold text-gray-900 group-hover:text-red-600 transition-colors duration-300 leading-tight"
              >
                Arquitectura de
                <span
                  class="block bg-gradient-to-r from-red-400 to-red-600 bg-clip-text text-transparent"
                >
                  Computadoras
                </span>
              </h1>
              <p
                class="text-xs md:text-sm text-black group-hover:text-red-600 transition-colors duration-300"
              >
                Universidad Nacional del Santa
              </p>
            </div>
            <div class="sm:hidden">
              <h1 class="text-base md:text-lg font-bold text-gray-600">
                Arquitectura
              </h1>
            </div>
          </a>
        </div>
      </div>
    </header>
    <main class="min-h-screen">
      <slot />

      <footer
        class="bg-white/80 backdrop-blur-md border-t border-red-500/30 mt-16 shadow-lg shadow-gray-200/50"
      >
        <div class="container mx-auto px-4 py-6 md:py-8 max-w-7xl">
          <div class="text-center space-y-3">
            <div class="flex items-center justify-center gap-2 text-gray-700">
              <div class="w-2 h-2 bg-red-400 rounded-full animate-pulse"></div>
              <p class="font-medium text-sm md:text-base">Ciclo IV - 2025</p>
            </div>
            <p class="text-gray-600 text-xs md:text-sm">
              Ingeniería de Sistemas e Informática - UNS | Dr. Guerra Cordero
              Carlos
            </p>
            <div class="pt-3 md:pt-4 border-t border-gray-300">
              <p class="text-gray-500 text-xs">
                Repositorio de Videos Educativos
              </p>
            </div>
          </div>
        </div>
      </footer>
    </main>
  </body>
</html>
