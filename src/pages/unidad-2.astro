---
import Layout from "../layouts/Layout.astro";

const topics = [];
---

<Layout title="Unidad 2 - Arquitectura de Computadoras">
  <div
    class="min-h-screen bg-gradient-to-br from-white via-red-50 to-white pt-20"
  >
    <div class="container mx-auto px-4 py-8">
      <!-- Back Button -->
      <a
        href="/"
        class="inline-flex items-center gap-2 text-red-400 hover:text-red-300 mb-6 transition-colors"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M19 12H5M12 19l-7-7 7-7"></path>
        </svg>
        Volver a unidades
      </a>

      <!-- Header -->
      <div class="max-w-5xl mx-auto mb-8 text-center">
        <h2 class="text-4xl font-bold text-gray-900 mb-2">
          Unidad 2: Próximamente
        </h2>
        <p class="text-gray-700 text-lg">
          Esta unidad estará disponible próximamente
        </p>
      </div>

      <!-- Construction Message -->
      <div class="max-w-4xl mx-auto">
        <div
          class="bg-white/80 backdrop-blur-sm border border-red-200/50 rounded-2xl p-12 text-center shadow-lg"
        >
          <div class="mb-8">
            <svg
              class="mx-auto mb-6 text-red-400"
              width="80"
              height="80"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"
              ></path>
            </svg>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              Página en Construcción
            </h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
