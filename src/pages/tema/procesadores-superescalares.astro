---
// src/pages/tema/procesadores-superescalares.astro
import Layout from "../../layouts/Layout.astro";
import HybridTopicPage from "../../components/introduccion/HybridTopicPage";
import { getCompleteTopicData } from "../../data/topics";

const topicData = getCompleteTopicData(
  "unidad1",
  "procesadores-superescalares"
);

if (!topicData.videos && !topicData.theory) {
  return Astro.redirect("/unidad-1");
}

const topicTitle =
  topicData.theory?.title ||
  topicData.videos?.name ||
  "Procesadores Superescalares";
---

<Layout title={`${topicTitle} - Arquitectura de Computadoras`}>
  <HybridTopicPage
    topicData={topicData}
    unitName="Unidad 1"
    topicName={topicTitle}
    client:load
  />
</Layout>
