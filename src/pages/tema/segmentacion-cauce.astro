---
// src/pages/tema/segmentacion-cauce.astro
import HybridTopicPage from "../../components/introduccion/HybridTopicPage";
import { getCompleteTopicData } from "../../data/topics";
import Layout from "../../layouts/Layout.astro";

const topicData = getCompleteTopicData("unidad1", "segmentacion-cauce");

if (!topicData.videos && !topicData.theory) {
  return Astro.redirect("/unidad-1");
}

const topicTitle =
  topicData.theory?.title || topicData.videos?.name || "Segmentaci√≥n de Cauce";
---

<Layout title={`${topicTitle} - Arquitectura de Computadoras`}>
  <HybridTopicPage
    topicData={topicData}
    unitName="Unidad 1"
    topicName={topicTitle}
    client:load
  />
</Layout>
